{{> admin/header}}
{{> admin/nav}}
               <!-- dashboard inner -->
               <div class="midde_cont">
                  <div class="container-fluid">
                     <div class="row column_title">
                        <div class="col-md-12">
                           <div class="page_title">
                              <h2>{{this.title}}</h2>
                           </div>
                        </div>
                     </div>
                     
                     
                    <div class="row column">
                        <form class="row g-3" action="" method="POST">
    <div class="col-md-12">
                           <div class="white_shd full margin_bottom_30">
                              <div class="full graph_head">
                                 <div class="heading1 margin_0">
                                    <h2>All My Blog Posts</h2>
                                 </div>
                              </div>
                              <div class="table_section padding_infor_info">
                                 <div class="table-responsive-sm">
                                    <table class="table">
                                       <thead>
                                          <tr>
                                             <th>#</th>
                                             <th>image</th>
                                             <th>Title</th>
                                             <th>Name</th>
                                             <th>Content</th>
                                             <th>Date Created</th>
                                             <th>Status</th>
                                             <th></th>
                                             <th></th>

                                          </tr>
                                       </thead>
                                       <tbody>
                                          {{#each data}}
                                          <tr>
                                             <td>{{@index}}</td>
                                             <td><span class="user_img"><img class="img-responsive rounded" alt="" src="/blogImages/{{this.image}}"/></span></td>
                                             <td>{{this.title}}</td>
                                             <td>{{this.name}}</td>
                                             <td>{{this.content}}</td>
                                             <td>{{this.date_created}}</td>
                                             <td>{{this.status}}</td>
                                             <td><a href="edit?id={{this._id}}"><i class="fa fa-edit"></i></a></td>
                                             <td><a  href="edit/{{this._id}}"><i class="fa fa-remove"></i></a></td>
                                          </tr>
                                          {{/each}}
                                       </tbody>
                                    </table>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
</form>
                    </div>
   

                  </div></div>
                  <!-- footer -->
               {{> admin/footer}}